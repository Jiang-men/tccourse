<li class="recom-course-item">
   <div class="course-cover">
     <a href="https://ke.qq.com/course/{{courseId}}" class="course-lk" target="_blank">
       <img src="{{courseImg}}" alt="{{courseName}}" />
     </a>
   </div>
   <div class="course-info">
    <a href="https://ke.qq.com/course/{{courseId}}" target="_blank">
      <h3 class="course-tt">{{courseName}}</h3>
    </a>
      <div class="course-dec-wrap">
        <p class="course-dec">{{description}}</p>
        <p class="course-teacher">
          <img class="teacher-img" src="{{teacherImg}}" /> 
          <span class="teacher-name">{{teacherName}}</span>
        </p>
      </div>
      <p class="course-price">￥{{coursePrice}}.00</p>
      <div class="btn-primary">
        <a href="https://ke.qq.com/course/{{courseId}}" target="_blank">
          <span>立即报名</span>
        </a>
      </div>
   </div>
</li>